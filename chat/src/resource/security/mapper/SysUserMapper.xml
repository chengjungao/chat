<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chengjungao.chat.security.dao.SysUserDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.chengjungao.chat.security.entity.sys_user" >
	  <id column="id" property="id" jdbcType="INTEGER" />
    <result column="userid" property="userid" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
     <result column="username" property="category" jdbcType="VARCHAR" />
    <result column="category" property="category" jdbcType="VARCHAR" />
<!--   <result column="dept" property="dept" jdbcType="VARCHAR" /> -->
    <result column="roleid" property="roleid" jdbcType="VARCHAR" />
    <result column="lock_flag" property="lock_flag" jdbcType="VARCHAR" />
     <result column="remark" property="remark" jdbcType="VARCHAR" />
  </resultMap>
       

<sql id="Base_Column_List" >
    id, userid, password,category , roleid ,lock_flag ,remark
  </sql>
   
   
<!-- 查询条件 -->
<sql id="Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null" >
	    and id =  #{id}
	</if>
	<if test="userid != null" >
	    and userid =  #{userid}
	</if>
	<if test="category != null" >
	    and category =  #{category}
	</if>
	<if test="dept != null" >
	    and dept =  #{dept}
	</if>
	<if test="roleid != null" >
	    and roleid =  #{roleid}
	</if>
	<if test="lock_flag != null" >
	    and lock_flag =  #{lock_flag}
	</if>
	
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="add" parameterType="Object" >
  <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey>
  insert into sys_user(id, userid, password,category ,dept, roleid ,lock_flag ,remark)
 values(#{id},#{userid},#{password},#{category},#{dept},#{roleid},#{lock_flag},#{remark})
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="Object" >
  update sys_user set userid=#{userid},password=#{password},category=#{category},dept=#{dept},roleid=#{roleid},lock_flag=#{lock_flag},remark=#{remark}  where id=#{id}
 </update>
 
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateBySelective" parameterType="Object" >
	update sys_user set 
	<trim  suffixOverrides="," >
	<if test="userid != null" >
	    and userid =  #{userid}
	</if>
	<if test="category != null" >
	    and category =  #{category}
	</if>
	<if test="dept != null" >
	    and dept =  #{dept}
	</if>
	<if test="roleid != null" >
	    and roleid =  #{roleid}
	</if>
	<if test="lock_flag != null" >
	    and lock_flag =  #{lock_flag}
	</if>
	</trim> where id=#{id}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete 	 from sys_user where id = #{id}
</delete>
 
<!-- 根据id查询 系统用户 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from sys_user where id = #{id}
</select>

<!-- 系统用户 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from sys_user 
	<include refid="Where_Clause"/>
</select>
  	
<!-- 查询系统用户列表 -->

  	
<!-- 用于登录检查 -->
<select id="queryLogin" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from sys_user 
	where userid=#{userid} and password=#{password}
</select>
</mapper>   
